<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--全屏显示-->
    <style name="FullScree" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>


    <!--把控件属性放到style文件中，方便属性复用-->
    <style name="video_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="main_tab_rb_style">
        <item name="android:textColor">@drawable/selector_main_top_tab_textcolor</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/dp_2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
